{
    "compilerOptions": {
        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./src",
        "declaration": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
        "lib": [
            "ES2021"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "noEmit": false,
        "noImplicitAny": false,
        "outDir": "./dist",
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "strictPropertyInitialization": false,
        "target": "ES2021",
        "typeRoots": [
            "./node_modules/@types/**/*",
            "./src/types/**/*"
        ],
        "useDefineForClassFields": true,
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
